<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('./partials/head.ejs') %> 
        <title>Inicio</title>
    </head>
     
    <body>
        <header id="header">
            <%- include ('./partials/header.ejs') %>
            <input type="hidden" name="" id="rutaImagen" value="<%= informacionPaginaInicio.ImagenBanner %>">
        </header>
        <section class="contenedor">
            <div class="bloque-texto">
                <p class="animation"><%= informacionPaginaInicio.TextoBanner %></p>
                
            </div>
        </section>
         
        <main class="mainIndex">
            <section class="sectionGeneralInfo">
                <div class="blockText">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
                </div>
               
            </section>

            <section class="contenedorMenu">
                <h3>Nuestros Productos</h3>
                <div class="contenedorProductos">
                    
                    <% if (categorias.length > 0) { %>
                        <% categorias.forEach(categoria => { %>
                            <div class="contenedorGeneralProducto">
                                <a class="bloqueProduct" href="/productos/<%= categoria.Id %>">
                                    <img src="<%= categoria.ImgBanner %>" alt="">
                                    
                                </a>
                                <div class="infoProduct">
                                    <p><%= categoria.Name %></p>
                                </div>
                            </div>
                            
                        <% }) %>
                    <% } else { %>
                        <p>No hay categorias aún</p>
                    <% } %>
                    
                </div>
            </section>
            
            <section class="contenedorMenu">
                <div class="contenedor2Vacios">
                    <div class="contenedoVacio"></div>
                    <h3>Síguenos en Instagram</h3>
                    <div class="contenedoVacio"></div>
                </div>
                
                <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
                <div class="elfsight-app-f1fd211d-6edf-475a-9e67-587e8ca1d833" data-elfsight-app-lazy></div>
            </section>

             
        </main>
        <footer>
            <%- include ('./partials/footer.ejs') %>
        </footer>
    </body>

    

     
</html>

<script>
    const headerTotal = document.getElementById('header')
    const rutaImagen = document.getElementById('rutaImagen')
    let pathname = window.location.pathname
    const urlImage  = rutaImagen.value

    if(pathname == '/') {
        headerTotal.style.backgroundImage = `linear-gradient(
            rgba(0, 0, 0, 0.5),
            rgba(0,0,0,0.3)
        ),
        url('${urlImage}')`

        headerTotal.style.height = '70vh'
    }

</script>